<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="71dp"
        android:onClick="buttonBack"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOneTimePad" />

    <Button
        android:id="@+id/buttonOneTimePad"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="25dp"
        android:onClick="buttonOneTimePad"
        android:text="Encrypted by OneTimePad Code"
        app:layout_constraintBottom_toTopOf="@+id/buttonBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonASC2" />

    <Button
        android:id="@+id/buttonASC2"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="22dp"
        android:onClick="buttonAsk2"
        android:text="Encrypted by ASCII Code"
        app:layout_constraintBottom_toTopOf="@+id/buttonOneTimePad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVigenere" />

    <Button
        android:id="@+id/buttonCaesar"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="17dp"
        android:onClick="buttonCaesar"
        android:text="Encrypted by Caesar Code"
        app:layout_constraintBottom_toTopOf="@+id/buttonSubstitution"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSubstitution"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="20dp"
        android:onClick="buttonSubstitution"
        android:text="Encrypted by Substitution Code"
        app:layout_constraintBottom_toTopOf="@+id/buttonVigenere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCaesar" />

    <Button
        android:id="@+id/buttonVigenere"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="20dp"
        android:onClick="buttonVigenere"
        android:text="Encrypted by Vigenere Code"
        app:layout_constraintBottom_toTopOf="@+id/buttonASC2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubstitution" />
</android.support.constraint.ConstraintLayout>